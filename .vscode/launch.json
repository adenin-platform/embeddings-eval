{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Generate Embeddings - Default Project",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "args": ["generate", "--project", "default"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Validate Project - Default",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/validate-project.js",
      "args": ["default"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Generate Embeddings - Courses DE",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "args": ["generate", "--project", "courses-de"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Validate Project - Courses DE",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/validate-project.js",
      "args": ["courses-de"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Evaluate - Default Project",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "args": ["evaluate", "--project", "default"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Full Pipeline - Default Project",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "args": ["--project", "default"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}